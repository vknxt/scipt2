-- Exemplo básico de estrutura para um script ESP no Roblox

-- Função para desenhar caixas ao redor dos jogadores
function drawESP(player)
    -- Verifica se o jogador é válido e não é o jogador local
    if player and player ~= game.Players.LocalPlayer then
        -- Cria uma nova caixa para o jogador
        local box = Instance.new("BoxHandleAdornment")
        box.Size = Vector3.new(4, 6, 1) -- Tamanho da caixa
        box.Adornee = player.Character -- Anexa ao personagem do jogador
        box.Color3 = Color3.new(1, 0, 0) -- Cor da caixa (vermelho)
        box.AlwaysOnTop = true -- Sempre visível
        box.ZIndex = 10 -- Prioridade de renderização
        box.Parent = game.Workspace -- Adiciona ao Workspace
    end
end

-- Função para atualizar ESP para todos os jogadores
function updateESP()
    for _, player in pairs(game.Players:GetPlayers()) do
        drawESP(player)
    end
end

-- Atualiza o ESP a cada segundo
while wait(1) do
    updateESP()
end
